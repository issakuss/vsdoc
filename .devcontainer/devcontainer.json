{
    "name": "issakvsdoc",
    "service": "issakvsdoc",
    "dockerComposeFile": "docker-compose-remote.yml",
    "workspaceFolder": "/mnt",

    "settings": { 
        "highlight.decorations": { "rangeBehavior": 3 },
        "highlight.regexFlags": "gi",
        "highlight.maxMatches": 250,
        "highlight.regexes": {
            "(@)([-_.!~*\\'()a-zA-Z0-9;\/?:\\@&=+\\$,%#]+)":{
              "filterFileRegex": ".*\\.md",
              "decorations": [
                {"color": "#646464"},
                {"color": "#646464"}
              ]}},

        "grammarly.files.include": [
          "**/readme.md",
          "**/README.md",
          "**/*.txt",
          "**/*.md"
        ],
        "grammarly.config.documentDomain": "academic",
    },

    "extensions": [
        "vscodevim.vim",

        "donjayamanne.githistory",
        "eamodio.gitlensa",
        "seatonjiang.gitmoji-vscode",

        "ms-python.python",

        "mblode.zotero",
        "znck.grammarly",
        "martinchristiaan.synonymprovider",
        "kirozen.wordcounter",
        "fabiospampinato.vscode-highlight",

        "tomoki1207.pdf",
        "ambooth.git-rename",
        "nemesv.copy-file-name",
        "artdiniz.quitcontrol-vscode",
        "mrmlnc.vscode-duplicate"
    ],

    "postCreateCommand": "/bin/bash --login"
  }